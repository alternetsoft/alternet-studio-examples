<Window x:Class="SQLDOMParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Wpf="clr-namespace:Alternet.Editor.Wpf;assembly=Alternet.Editor.Wpf.v9"
        xmlns:local="clr-namespace:SQLDOMParser"
        mc:Ignorable="d"
        Icon="/SQLDOMParser.Wpf;component/Images/Icon.ico"
        Title="SQL DOM Parser" Height="492" Width="723">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="laDescription" Grid.Row="0">
            <AccessText TextWrapping="Wrap" Text="This demo shows how to use Microsoft TSql100Parser parser to support automatic code completion, code outlining, smart formatting, and syntax error underlining."/>
        </Label>
        <Wpf:TextEditor Grid.Row="1" Name="syntaxEdit1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" AllowOutlining="True"/>
    </Grid>
</Window>