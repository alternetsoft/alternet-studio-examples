<UserControl x:Class="Alternet.Editor.Wpf.MainDemo_Wpf.ThemeSettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="104" d:DesignWidth="353"
             Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Loaded="UserControl_Loaded">
    <Grid Margin="23,13,13,13">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="3,3,20,3">

            <Label Content="Visual Theme:" VerticalAlignment="Center"/>

            <ComboBox Name="VisualThemeComboBox" VerticalAlignment="Center"
                      SelectedIndex="0"
                      SelectionChanged="VisualThemeComboBox_SelectionChanged" ToolTip="Choose the visual theme">
            </ComboBox>

        </StackPanel>
    </Grid>
</UserControl>
