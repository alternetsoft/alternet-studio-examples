<Window x:Class="PackageReference.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/PackageReference.Wpf;component/Images/Icon.Ico" 
        Title="Package reference" Height="480" Width="734" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="340"/>
                    <ColumnDefinition Width="170"/>
                </Grid.ColumnDefinitions>
                <Label Content="This demo shows how to use package references from script." Grid.Column="0" Width="360" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                <Button Name="ScriptButton" Content="Run Script" Grid.Column="1" Height="21" Width="70" Margin="0,3,0,6" Command="{Binding RunScript}"/>
            </Grid>
        </DockPanel>
        <Border Name="EditBorder" BorderBrush="Gray" Grid.Row="2" BorderThickness="2" Margin="0,5,0,0"/>
    </Grid>
</Window>
